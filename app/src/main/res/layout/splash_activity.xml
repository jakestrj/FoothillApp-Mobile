<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_splashicon"
        android:layout_centerInParent="true"/>

    <TextView
        android:textSize="15sp"
        android:textColor="@color/splash_message_color"
        android:gravity="center"
        android:id="@+id/splash_message"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="0dp"
        android:text="@string/splash_message"
        android:layout_alignParentBottom="true"
        android:alpha="0.0"
        android:fontFamily="sans-serif-light" />

    <View
        android:id="@+id/fake_background"
        android:background="@color/material_fragment_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

